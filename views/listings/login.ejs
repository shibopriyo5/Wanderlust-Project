
<% layout("/layouts/boilerplate") %>
<body>
    <div class="flash-container">
        <% if(suc && suc.length){ %>
            <div class="flash flash-success" role="status" aria-live="polite"><%= suc %></div>
        <% } %>
        <% if(err && err.length){ %>
            <div class="flash flash-error" role="alert" aria-live="assertive"><%= err %></div>
        <% } %>
    </div>

    <style>
    /* Minimal scoped flash styles for viewall */
    .flash-container{max-width:1100px;margin:18px auto;padding:0 18px}
    .flash{padding:10px 14px;border-radius:8px;margin-bottom:10px;font-weight:600;box-shadow:0 6px 18px rgba(15,23,42,0.06)}
    .flash-success{background:linear-gradient(90deg,#ecfdf5,#dcfce7);color:#065f46;border:1px solid rgba(6,95,70,0.08)}
    .flash-error{background:linear-gradient(90deg,#fff1f2,#fee2e2);color:#7f1d1d;border:1px solid rgba(127,29,29,0.06)}
    </style>
    <h2>Login</h2>

<form action="/login" method="POST">
    <input name="username" placeholder="Username" required />
    <input type="password" name="password" placeholder="Password" required />
    <button>Login</button>
</form>
</body>

