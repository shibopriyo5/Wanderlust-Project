<% layout("/layouts/boilerplate") %>

<body>
<main class="viewall-page">

   
    <div class="flash-container">
        <% if(suc && suc.length){ %>
            <div class="flash flash-success"><%= suc %></div>
        <% } %>
        <% if(err && err.length){ %>
            <div class="flash flash-error"><%= err %></div>
        <% } %>
    </div>


    <section class="category-bar">
        <div class="categories">

            <a href="#" class="cat">
                <i class="fa-solid fa-fire"></i>
                <span>Trending</span>
            </a>

            <a href="/getlistings/category/Mountains" class="cat">
                <i class="fa-solid fa-mountain-sun"></i>
                <span>Mountains</span>
            </a>

            <a href="/getlistings/category/Swimming-Pools" class="cat">
                <i class="fa-solid fa-person-swimming"></i>
                <span>Pools</span>
            </a>

            <a href="/getlistings/category/Forests" class="cat">
                <i class="fa-solid fa-tree"></i>
                <span>Forests</span>
            </a>

            <a href="/getlistings/category/Farms" class="cat">
                <i class="fa-solid fa-cow"></i>
                <span>Farms</span>
            </a>

            <a href="/getlistings/category/Sea-Side" class="cat">
                <i class="fa-solid fa-water"></i>
                <span>Sea-side</span>
            </a>

            <a href="/getlistings/category/castles" class="cat">
                <i class="fa-brands fa-fort-awesome"></i>
                <span>Castles</span>
            </a>

            <a href="/getlistings/category/iconic-Cities" class="cat">
                <i class="fa-solid fa-city"></i>
                <span>Cities</span>
            </a>
        </div>


        <div class="tax-toggle">
            <span>After taxes</span>
            <label class="switch">
                <input type="checkbox" id="toggle">
                <span class="slider"></span>
            </label>
        </div>
    </section>

 
    <section class="listing-grid">
        <% for(let doc of docs){ %>

            <a href="/getlistings/<%= doc._id %>" class="listing-card">

                <div class="image-wrap">
                    <img src="<%= doc.image.url %>" loading="lazy">
                </div>

                <div class="card-info">
                    <h3><%= doc.title %></h3>

                    <p class="price">
                        ₹ <%= doc.Price.toLocaleString("en-IN") %>
                    </p>

                    <p class="tax-price">
                        After taxes: ₹ <%= Math.round(doc.Price * 1.18).toLocaleString("en-IN") %>
                    </p>
                </div>

            </a>

        <% } %>
    </section>

</main>


<style>

.viewall-page{
    background:#f8fafc;
    padding-bottom:40px;
}

.flash-container{
    max-width:1200px;
    margin:20px auto;
    padding:0 16px;
}

.flash{
    padding:12px 16px;
    border-radius:10px;
    font-weight:600;
    margin-bottom:10px;
}

.flash-success{
    background:#dcfce7;
    color:#065f46;
}

.flash-error{
    background:#fee2e2;
    color:#7f1d1d;
}


.category-bar{
    max-width:1200px;
    margin:0 auto 20px;
    padding:0 16px;
    display:flex;
    align-items:center;
    justify-content:space-between;
    gap:20px;
}

.categories{
    display:flex;
    gap:24px;
    overflow-x:auto;
    padding-bottom:6px;
}

.categories::-webkit-scrollbar{
    display:none;
}

.cat{
    text-decoration:none;
    color:#374151;
    font-size:13px;
    display:flex;
    flex-direction:column;
    align-items:center;
    gap:6px;
    opacity:.75;
    min-width:70px;
}

.cat:hover{
    opacity:1;
}

.cat i{
    font-size:20px;
}


.tax-toggle{
    display:flex;
    align-items:center;
    gap:10px;
    font-size:14px;
}

.switch{
    position:relative;
    width:46px;
    height:24px;
}

.switch input{display:none}

.slider{
    position:absolute;
    inset:0;
    background:#d1d5db;
    border-radius:999px;
    cursor:pointer;
}

.slider::before{
    content:"";
    position:absolute;
    height:18px;
    width:18px;
    left:3px;
    bottom:3px;
    background:white;
    border-radius:50%;
    transition:.25s;
}

input:checked + .slider{
    background:#22c55e;
}

input:checked + .slider::before{
    transform:translateX(22px);
}


.listing-grid{
    max-width:1200px;
    margin:auto;
    padding:0 16px;
    display:grid;
    grid-template-columns:repeat(auto-fill,minmax(240px,1fr));
    gap:22px;
}


.listing-card{
    background:#fff;
    border-radius:16px;
    overflow:hidden;
    text-decoration:none;
    color:#111827;
    box-shadow:0 10px 25px rgba(0,0,0,.08);
    transition:transform .2s ease, box-shadow .2s ease;
}

.listing-card:hover{
    transform:translateY(-4px);
    box-shadow:0 16px 40px rgba(0,0,0,.12);
}

.image-wrap{
    height:200px;
}

.image-wrap img{
    width:100%;
    height:100%;
    object-fit:cover;
}

.card-info{
    padding:14px;
}

.card-info h3{
    font-size:16px;
    font-weight:600;
    margin:0 0 6px;
}

.price{
    font-weight:700;
}

.tax-price{
    font-size:13px;
    color:#6b7280;
    opacity:0;
    transition:.2s;
}


@media(max-width:600px){
    .tax-toggle span{
        display:none;
    }
}
</style>


<script>
const toggle = document.getElementById("toggle");
const taxPrices = document.querySelectorAll(".tax-price");

function updateTax(){
    taxPrices.forEach(p=>{
        p.style.opacity = toggle.checked ? "1" : "0";
    });
}

toggle.addEventListener("change", updateTax);
updateTax();
</script>

</body>
